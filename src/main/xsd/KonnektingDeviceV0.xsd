<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            elementFormDefault="qualified" 
            targetNamespace="http://konnekting.de/xml/KonnektingDevice/v0" 
            xmlns="http://konnekting.de/xml/KonnektingDevice/v0"
            xmlns:device="http://konnekting.de/xml/KonnektingDevice/v0/Device"
            xmlns:config="http://konnekting.de/xml/KonnektingDevice/v0/Configuration">
    
    <xsd:import namespace="http://konnekting.de/xml/KonnektingDevice/v0/Device" schemaLocation="KonnektingDeviceV0_Device.xsd"/>    
    <xsd:import namespace="http://konnekting.de/xml/KonnektingDevice/v0/Configuration" schemaLocation="KonnektingDeviceV0_Configuration.xsd"/>    

    <xsd:element name="KonnektingDevice">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="Device" type="device:Device"/>
                <xsd:element name="Configuration" type="config:Configuration" minOccurs="0"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    
</xsd:schema>
